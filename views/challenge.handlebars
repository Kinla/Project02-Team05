<div id="content-wrapper">
          <div class="container-fluid">
           <h3>Challenge : </h3>

            <div class="card mb-3">
              <div class="card-header">
                Description :
                </div>
              <div class="card-body">
                  <p> description of the challenge </p>
                  <div class="progress">
                      <div class="progress-bar" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width:70%"> </div>
                  </div>  
              </div>
            </div>

            {{!-- report --}}
            <div class="card mb-3">
              <div class="card-header">
                Report :
                </div>
              <div class="card-body">
                        {{#each report}}
                        <div class="card mb-3">
                          <div class="card-body"> 
                            <p>{{challengeTitle}}</p>
                            <p>{{#if successfull}} successfull {{else}} not successfull {{/if}} </p>
                          </div>
                        </div>
                        {{/each}}
            </div>
            <button> Add a report </button>

            </div>

            {{!-- comments --}}
            <div class="card mb-3">
              <div class="card-header">
                Comments :
                </div>
              <div class="card-body">
                  {{!-- comments will go here --}}
              </div>
            </div>


             <!-- Sticky Footer -->
