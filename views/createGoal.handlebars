  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xl-9 mx-auto">
        <div class="card card-signin flex-row my-5"> 
          <div class="card-body">
            <h5 class="card-title text-center">Create a Challenge :</h5>

                  <form>
                    <div class="form-group">
                      <label for="exampleInputEmail1">Title : </label>
                      <input type="name" class="form-control" id="inputTitle" aria-describedby="goalTitle" placeholder="Enter Title">
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Description : </label>
                    <textarea class="form-control" id="description"></textarea>
                    </div>
                    <fieldset class="form-group">
                      <div class="row">
                        <legend class="col-form-label col-md-2 pt-0">Commitment Type : </legend>
                        <div class="col-sm-10">
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="onGoing" value="option1" checked>
                            <label class="form-check-label"> On Going </label>
                          </div>
                          <div class="form-check">
                            <input class="form-check-input" type="radio" name="gridRadios" id="oneShot" value="option2">
                            <label class="form-check-label"> One Shot </label>
                          </div>
                        </div>
                      </div>
                    </fieldset>

                      <div class="form-group">
                        <label for="inputStartDate" class="col-2 col-form-label">Start Date : </label>
                        <div class="col-10">
                          <input class="form-control" type="date" value="2019-01-18" id="inputStartDate">
                        </div>
                      </div>

                      <div class="form-group">
                          <label for="duration" class="col-2 col-form-label">Duration : </label>
                          <div class="col-10">
                            <input class="form-control" type="number" value="500" id="inputDuration">
                          </div>
                      </div>

                      <div class="form-group">
                        <label for="refereeEmail">Referee Email Address : </label>
                        <input type="email" class="form-control" id="inputRefEmail" aria-describedby="emailHelp" placeholder="Enter Referee Email">
                      </div>

                    <button type="submit" class="btn btn-dark"><a href="/dashboard">Submit</a></button>
                </form>
          </div>
        </div>
      </div>
    </div>
  </div>



